{% extends 'layouts/base.html.twig' %}

{% block title %}
	Edit Profile
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<h1 class="my-5 text-center">Change Password</h1>
			{{ form_start(form) }}
			<div class="form-group m-3">
				{{ form_widget(form) }}
			</div>
			<div class="d-grid gap-2">
				<button class="m-3 btn btn-lg btn-dark" type="submit">Update Password</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
